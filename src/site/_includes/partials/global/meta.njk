{% set pageTitle = title + ' | ' + global.siteName %}
{% set shareTitle = title %}
{% set pageDescription = global.siteDescription %}
{% set shareImage = global.siteShareImage %}

{% if metaTitle %}
  {% set pageTitle = metaTitle %}
  {% set shareTitle = metaTitle %}
{% endif %}

{% if metaDescription %}
  {% set pageDescription = metaDescription %}
{% endif %}

{% if metaShareImage %}
  {% set shareImage = metaShareImage %}
{% endif %}

<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
<meta name="description" content="{{ pageDescription }}">

<title>{{ pageTitle }}</title>

{% include 'partials/global/favicons.njk' %}

<meta property="og:title" content="{{ shareTitle }}">
<meta property="og:site_name" content="{{ global.siteName }}">
<meta property="og:type" content="website">
<meta property="og:url" content="{{ page.url | absoluteUrl }}">
<meta property="og:image" content="{{ shareImage | absoluteUrl }}">
<meta property="og:description" content="{{ pageDescription }}">
<meta property="og:locale" content="en_US">

<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="{{ shareTitle }}">
<meta name="twitter:url" content="{{ page.url | absoluteUrl }}">
<meta name="twitter:description" content="{{ pageDescription }}">
<meta name="twitter:image" content="{{ shareImage | absoluteUrl }}">
{% if global.twitterHandle %}
  <meta name="twitter:site" content="{{ global.twitterHandle }}">
  <meta name="twitter:creator" content="{{ global.twitterHandle }}"/>
{% endif %}

