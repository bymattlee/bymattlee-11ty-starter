<header class="c-header u-mb30 u-mb30-md" role="banner">
  <div class="l-container">
    <h1>
      <a href="{{ '/' | absoluteUrl }}">
        {% svg 'icon-bymattlee', '0 0 50 50', 'c-header-logoSvg u-block' %}
        {{ settings.seo.siteName }}
      </a>
    </h1>
    {% if sections.header.menu %}
      <nav>
        <ul class="u-unstyled u-m0">
          {% for menuItem in sections.header.menu %}
            <li class="u-inlineBlock{% if loop.index > 1 %} u-ml20 u-ml20-md{% endif %}">
              <a href="{{ menuItem.url | absoluteUrl }}" class="u-inlineBlock{% isSamePageOrSection menuItem.url, page.url, ' u-white' %}"{% if menuItem.openInNewTab %} target="_blank"{% endif %}>{{ menuItem.name }}</a>
            </li>
          {% endfor %}
        </ul>
      </nav>
    {% endif %}
  </div>
</header>
