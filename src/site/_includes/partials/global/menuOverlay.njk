<section class="c-menuOverlay u-bgBlack u-fixed u-top u-left u-wFull u-h0 u-opacity0 u-overflowHidden u-zMenuOverlay u-flex u-flexColumn u-pt80 u-pb40 u-hide-sm" x-bind:class="{ 's-isOpen': menuOverlayIsOpen }">
  <div class="u-flex1 u-flex u-justifyCenter u-itemsCenter">
    {% if sections.header.menu %}
      <nav>
        <ul class="u-unstyled">
          {% for menuItem in sections.header.menu %}
            <li class="u-my15 u-textCenter">
              <a href="{{ menuItem.url | absoluteUrl }}" class="u-inlineBlock u-uppercase u-fontHeading u-font16{% isSamePageOrSection menuItem.url, page.url, ' u-white' %} js-menuItem"{% if menuItem.openInNewTab %} target="_blank"{% endif %} x-on:click="menuOverlayIsOpen = false">{{ menuItem.name }}</a>
            </li>
          {% endfor %}
        </ul>
      </nav>
    {% endif %}
  </div>
  {% if settings.social.socialSites %}
    <nav>
      <ul class="u-unstyled u-mt20 u-mb0 u-textCenter">
        {% for socialSite in settings.social.socialSites %}
          <li class="u-inlineBlock u-my0 u-mx5 u-mx10-md">
            {% if socialSite.facebookUrl %}
              <a href="{{ socialSite.facebookUrl }}" class="u-inlineBlock" target="_blank" rel="noopener" aria-label="Like On Facebook">
                {% svg 'icon-facebook', '0 0 50 50', 'c-footer-socialSvg' %}
              </a>
            {% elseif socialSite.twitterUrl %}
              <a href="{{ socialSite.twitterUrl }}" class="u-inlineBlock" target="_blank" rel="noopener" aria-label="Follow On Twitter">
                {% svg 'icon-twitter', '0 0 50 50', 'c-footer-socialSvg' %}
              </a>
            {% elseif socialSite.instagramUrl %}
              <a href="{{ socialSite.instagramUrl }}" class="u-inlineBlock" target="_blank" rel="noopener" aria-label="Follow On Instagram">
                {% svg 'icon-instagram', '0 0 50 50', 'c-footer-socialSvg' %}
              </a>
            {% elseif socialSite.youtubeUrl %}
              <a href="{{ socialSite.youtubeUrl }}" class="u-inlineBlock" target="_blank" rel="noopener" aria-label="Subscribe On YouTube">
                {% svg 'icon-youtube', '0 0 50 50', 'c-footer-socialSvg' %}
              </a>
            {% endif %}
          </li>
        {% endfor %}
      </ul>
    </nav>
  {% endif %}
</section>