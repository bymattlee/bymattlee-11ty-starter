<div class="l-container l-container--small">
  <h2 class="u-greyLightC">Latest Articles</h2>
  <div class="u-mt20 u-mt40-md">
    {% if articles.all %}
      {% for article in articles.all %}
        {% if loop.index <= 3 %}
          {% include 'partials/articles/preview.njk' %}
        {% endif %}
      {% endfor %}
    {% else %}
      <p>No articles have been written.</p>
    {% endif %}
  </div>
  <p class="u-mt40"><a href="{{ '/articles/' | absoluteUrl }}">&raquo; View All Articles</a></p>
</div>