<div class="l-container">
  <div class="u-mt60 u-mt60-md">
    <h2>Latest Articles</h2>
    <div class="u-mt-20 u-mt-20-md">
      {% if articles.all %}
        {% for article in articles.all %}
          {% if loop.index <= 3 %}
            {% include 'partials/articles/preview.njk' %}
          {% endif %}
        {% endfor %}
      {% else %}
        <p>No articles have been written.</p>
      {% endif %}
    </div>
    <p class="u-mt40 u-mt40-md"><a href="{{ '/articles/' | absoluteUrl }}">&raquo; View All Articles</a></p>
  </div>
</div>